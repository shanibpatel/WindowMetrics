@model WindowMetrics.Models.User

@{
    Layout = null; // No need for a layout for this example
    ViewData["Title"] = "Login";
}

<style>
    <!-- Your styles remain unchanged -->
</style>

<div class="login-container animate-in">
    <h2 class="text-center mb-4">Login</h2>

    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
    {
        <div class="form-group text-center">
            <label asp-for="UserName" class="control-label">UserName:</label>
            <input asp-for="UserName" class="form-control" required />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group text-center">
            <label asp-for="Password" class="control-label">Password:</label>
            <input asp-for="Password" type="password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-block mt-2">Login</button>
        </div>
    }

    @* Display validation summary *@
    <div asp-validation-summary="All" class="text-danger mt-3"></div>
</div>

@section Scripts {
    <script>
        <!-- Your scripts remain unchanged-- >
    </script>
}
